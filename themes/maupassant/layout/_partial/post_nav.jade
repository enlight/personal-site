if page.next || page.prev
  .post-nav
    if page.prev
      a.pre(href=url_for(page.prev_link ? page.prev_link : page.prev.path))
        != fa_icon('caret-left', { width: '16px', height: '16px', ariaHidden: true })
        = page.prev.title
    if page.next
      a.next(href=url_for(page.next_link ? page.next_link : page.next.path))
        = page.next.title
        != fa_icon('caret-right', { width: '16px', height: '16px', ariaHidden: true })
